<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>JOL3</display-name>
  <description>Jyhad On-Line 3.0 Web Client</description>
  <context-param>
    <param-name>directory</param-name>
    <param-value>/home/deckserv/interactive/data</param-value>
    <description>Location of the JOL database files</description>
  </context-param>
  <context-param>
    <param-name>prefix</param-name>
    <param-value>/jol3/</param-value>
    <description>Equal to context root value so hyperlinks can function correctly</description>
  </context-param>
  <context-param>
    <param-name>email</param-name>
    <param-value>george.finklang@gmail.com</param-value>
    <description>System admin email, to email exceptions and other status messages</description>
  </context-param>
